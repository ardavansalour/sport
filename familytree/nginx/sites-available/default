server {
        listen 80 default_server;
        listen [::]:80 default_server;

        # SSL configuration
        #
        listen 443 ssl default_server;
        listen [::]:443 ssl default_server;
        ssl_certificate /etc/letsencrypt/live/v2ray.ardysal.com/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/v2ray.ardysal.com/privkey.pem;

        root /var/www/html;
        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name v2ray.ardysal.com;

        location /it {
                try_files /inb.txt =404;
        }

        location /ih {
                try_files /inb/index.html =404;
        }

        location /ft {
                try_files /f.txt =404;
        }

        location /fh {
                try_files /inb/f.html =404;
        }
}